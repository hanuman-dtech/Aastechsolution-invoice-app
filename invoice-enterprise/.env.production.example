# ---------- Core image tags ----------
BACKEND_IMAGE=sairam9479/invoice-enterprise-backend:v1.0.1-seedfix-20260301
FRONTEND_IMAGE=sairam9479/invoice-enterprise-frontend:v1.0.1-seedfix-20260301
CELERY_WORKER_IMAGE=sairam9479/invoice-enterprise-celery-worker:v1.0.1-seedfix-20260301
