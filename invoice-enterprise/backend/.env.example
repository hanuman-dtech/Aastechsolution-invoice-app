# Database
DATABASE_URL=postgresql://invoice:invoice_secret@localhost:5432/invoice_enterprise

# Redis
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Security - CHANGE THESE IN PRODUCTION!
SECRET_KEY=replace-with-a-random-64-char-secret
ENCRYPTION_KEY=replace-with-a-different-random-64-char-secret

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# SMTP Settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=invoices@yourcompany.com
SMTP_USE_TLS=true

# Runtime
ENVIRONMENT=development
DEBUG=false
